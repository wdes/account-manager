{% extends 'base+login.twig' %}

{% block title %}{% trans "Identities" %}
{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            {% trans "Identities" %}
            <small>{% trans "my identities" %}</small>
        </h1>
    </section>

    <section class="content">
        <div class="box">
            <div class="box-header with-border">
              <h3 class="box-title">{% trans "My Identities" %}</h3>
              <div class="pull-right col-md-2">
                <a class="btn btn-block btn-primary btn-flat" href="?action=add">{% trans "Add" %}</a>
              </div>
            </div>
            <div class="box-body">
              <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Value</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                {% for identity in identities.identities() %}
                    <tr>
                        <td>{{ identity.idId }}</td>
                        <td>{{ identity.valueId }}</td>
                        <td>{{ identity.typeLabel }}</td>
                    </tr>
                {% endfor %}
              </table>
            </div>
          </div>
    </section>
{% endblock %}