{% extends 'base+login.twig' %}

{% block title %}{% trans "new identity" %}{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            {% trans "Add a new identity" %}
            <small>{% trans "new identity" %}</small>
        </h1>
    </section>

    <section class="content">
        <div class="box">
            <div class="box-body">
                <form class="form-horizontal" method="post" action="identities.php">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="typeOfId" class="col-sm-2 control-label">{% trans "Type of identity" %}</label>
                            <div class="col-sm-10">
                                <select class="form-control" name="type" id="typeOfId">
                                    {% for type in identities.types() %}
                                        <option value="{{ type.id }}">{{ type.label }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="valueOfId" class="col-sm-2 control-label">{% trans "Value" %}</label>
                            <div class="col-sm-10">
                                <input type="text" name="value" class="form-control" id="valueOfId" placeholder="{% trans "Value" %}">
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <a href="?" class="btn btn-default">{% trans "Cancel" %}</a>
                        <button type="submit" name="action" value="add" class="btn btn-info pull-right">{% trans "Save" %}</button>
                    </div>
                </form>

            </div>
        </div>
    </section>
{% endblock %}